@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Mesaj Gönder</h2>
    <form asp-action="SendMessage" method="post">
        <div class="form-group">
            <label>Alıcı Mail</label>
            @Html.TextBoxFor(x => x.Recevier, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Konu</label>
            @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Mesaj</label>
            @Html.TextAreaFor(x => x.MessageContent, new { @class = "form-control", rows = 5 })
        </div>

        <button type="submit" class="btn btn-primary">Gönder</button>
    </form>
</div>
