@model EntityLayer.Concrete.WriterMessage

@{
    ViewData["Title"] = "RecieverMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="container mt-4">
    <h2>Mesaj Detayları</h2>
    <form>
        @Html.HiddenFor(x => x.WriterMessageID)

        <div class="form-group mb-3">
            @Html.Label("Alıcı Adı")
            @Html.TextBoxFor(x => x.RecevierName, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group mb-3">
            @Html.Label("Gönderen Mail")
            @Html.TextBoxFor(x => x.Sender, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group mb-3">
            @Html.Label("Mesaj")
            @Html.TextBoxFor(x => x.MessageContent, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </form>
</div>