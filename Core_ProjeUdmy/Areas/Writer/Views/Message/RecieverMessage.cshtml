@using EntityLayer.Concrete
@model List<WriterMessage>
@{
    ViewData["Title"] = "RecieverMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Gönderen</th>
                            <th>Tarih</th>
                            <th>Detay</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th>@item.WriterMessageID</th>
                                <td>@item.Subject</td>
                                <td>@item.SenderName</td>
                                <td>@(((DateTime)item.Date).ToString("dd.MMM.yyyy"))</td>
                                <td>
                                    <a asp-area="Writer" asp-controller="Message" asp-action="MessageDetails" asp-route-id="@item.WriterMessageID"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="mdi mdi-eye"></i> Detayları Gör
                                    </a>
                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>