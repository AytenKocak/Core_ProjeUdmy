@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Listesi Tablosu</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Başlık</th>
                <th scope="col">Oran</th>
                <th scope="col">Sil</th>
                <th scope="col">Düzenle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.SkilID</th>
                    <td>@item.Title</td>
                    
                    <td>
                        <div class="d-flex align-items-center">
                            <span class="mr-2">@item.Value%</span>
                            <div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        <form method="post" asp-action="DeleteSkill" asp-controller="Skill" asp-route-id="@item.SkilID" onsubmit="return confirm('Silmek istediğine emin misin?');">
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </form>
                    </td>
                    <td>
                        <a href="/Skill/EditSkill/@item.SkilID" class="btn btn-info">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a href="/Skill/AddSkill" class="btn btn-primary">Yeni Yetenek Ekle</a>
</div>
