@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Güncelleme Sayfası</h3>
</div>
@using (Html.BeginForm("EditSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yetenek Düzenleme Panali</h4>
                <div class="form-group">
                    <label for="Name">#</label>
                    @Html.TextBoxFor(x => x.SkilID, new { @class = "form-control" })
                </div>
                    <div class="form-group">
                        <label for="Name">Başlık</label>
                        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label for="Date">Tarih</label>
                        @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                    </div>



                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <a href="/Experience/Index" class="btn btn-secondary ml-2">İptal</a>
                </div>
           
        </div>
    </div>

   
} 
    



