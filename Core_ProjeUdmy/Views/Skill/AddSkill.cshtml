@model EntityLayer.Concrete.Skill

@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yetenek Ekleme Sayfası</h4>

            @using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Value">Tarih</label>
                    @Html.TextBoxFor(x => x.Value, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Experience/Index" class="btn btn-secondary ml-2">İptal</a>
            }
        </div>
    </div>
</div>