@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "AddSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("AddSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">SosyalMedya Ekleme Sayfası</h4>

                <div class="form-group">
                    <label for="Name">Başlık</label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Url">Url</label>
                    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Ikon">İkon</label>
                    @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Experience/Index" class="btn btn-secondary ml-2">İptal</a>

            </div>
        </div>
    </div>
}


