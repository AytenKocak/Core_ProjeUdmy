@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Mesaj Gönderme Paneli</h4>

            @using (Html.BeginForm("AdminMessageSend", "AdminMessage", FormMethod.Post))
            {
                <div class="form-group">
                    <label for="Title">Konu</label>
                    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="Value">Alıcı</label>
                    @Html.TextBoxFor(x => x.Recevier, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Value">Mesaj</label>
                    @Html.TextAreaFor(x => x.MessageContent,8,3, new { @class = "form-control" })
                </div>

                <button type="submit" class="btn btn-primary">Gönder</button>
                <a href="/Experience/Index" class="btn btn-secondary ml-2">İptal</a>
            }
        </div>
    </div>
</div>

