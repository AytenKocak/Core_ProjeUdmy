@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Referans Detay Sayfası</h3>
</div>
@using (Html.BeginForm("EditTestimonial", "Testimonial", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Referans Düzenleme Panali</h4>
                <div class="form-group">
                    <label for="ID">#</label>
                    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Name"></label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Company">Şirket</label>
                    @Html.TextBoxFor(x => x.Company, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Title">Başlık</label>
                    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label for="ImageUrl">Resim Yolu</label>
                    @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Comment">Yorum</label>
                    @Html.TextAreaFor(x => x.Comment,8,3, new { @class = "form-control" })
                </div>


                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a href="/Testimonial/Index" class="btn btn-secondary ml-2">İptal</a>
            </div>

        </div>
    </div>


}






